body,html{height:100%;}

.mypage{
  height:100%;
  border: 1px dashed red;
}

.container {
  display: inline-flex;
  flex-wrap: wrap; 
  flex-direction: row;
  width: 100%;
  justify-content: center;
  align-content: center; 
  height: 100%;
  border: 1px dashed greenyellow;
}

.node {
  display: flex;
  flex-direction: column;
  align-items: center; 
  justify-content: center;
  border: 1px solid gray;
  height: 50px;
  padding-left: 4px;
  padding-right: 4px;
}

.node_title {
  font-size: 13px;
  color: #888;
}

.node_sum {
  font-size: 11px;
  color: #b2b2b2;
  margin-top: 3px;
}
